#!/usr/bin/with-contenv bash
echo
echo "-----------------------"
echo "| Statping run options |"
echo "-----------------------"
echo

echo '[ Checking for Verbose logs ]'
if [ -z "$VERBOSE" ]
  then
  echo '==> VERBOSE: not set'
  echo
   VERBOSE_OPTION=""
else
  echo "==> VERBOSE: mode set, $VERBOSE"
  echo
  VERBOSE_OPTION="-verbose $VERBOSE"
fi

echo '[ Checking for ENV file]'
if [ -z "$ENV" ]
then
  echo '==> ENV file loc: not defined'
  echo
  ENV_OPTION=""
else
  echo "==> ENV: $ENV"
  echo
  ENV_OPTION="-ENV $ENV"
fi

echo 'Docker Image source: https://hub.docker.com/r/eafxx/statping' 
echo 'Project source: https://github.com/hunterlong/statping'
echo
echo '---------------------'
echo '| Starting Statping |'
echo '---------------------'
echo
s6-setuidgid abc statping -port $PORT $VERBOSE_OPTION $ENV_OPTION